<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE7E7">


    <TextView
        android:id="@+id/city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#090909"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteY="89dp"
        tools:layout_editor_absoluteX="192dp"
        android:layout_alignLeft="@+id/loader"
        android:layout_alignStart="@+id/loader" />

    <TextView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#090909"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="90sp"
        tools:layout_editor_absoluteY="206dp"
        tools:layout_editor_absoluteX="192dp" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#090909"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        tools:layout_editor_absoluteY="436dp"
        tools:layout_editor_absoluteX="192dp" />

    <TextView
        android:id="@+id/details_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_icon"
        android:layout_centerHorizontal="true"
        android:textColor="#090909"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_editor_absoluteY="333dp"
        tools:layout_editor_absoluteX="192dp" />
    <TextView
        android:id="@+id/humidity_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_field"
        android:layout_centerHorizontal="true"
        android:textColor="#090909"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_editor_absoluteY="363dp"
        tools:layout_editor_absoluteX="192dp" />
    <TextView
        android:id="@+id/pressure_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humidity_field"
        android:layout_centerHorizontal="true"
        android:textColor="#090909"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_editor_absoluteY="402dp"
        tools:layout_editor_absoluteX="192dp" />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="206dp"
        tools:layout_editor_absoluteX="168dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_above="@+id/current_temperature_field"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

